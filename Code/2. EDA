#correlation matrix 
corr_data  = final_data[, .(pet_age_months, nb_breed_type, pet_de_sexed, nb_state, claim_paid)]
model.matrix(~0+., data = corr_data) %>% 
  cor(use = "pairwise.complete.obs") %>% 
  ggcorrplot(show.diag = FALSE, type = "lower", lab = TRUE, lab_size = 2)
